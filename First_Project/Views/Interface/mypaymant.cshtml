@model IEnumerable<First_Project.Models.ProductOrderf>

@{
    ViewData["Title"] = "mypaymant";
    Layout = "_Home";

}

<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Order list</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->



<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="product-thumbnail">Image</th>
                                <th class="product-name">Product</th>
                                <th class="product-price">Price</th>                               
                                <th class="product-total">Order date</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    @if (item.Status == "1")
                                    {
                                        <td class="product-thumbnail">
                                            <img src=@Url.Content("~/image/" + item.Product.Imagepath)
                                         asp-append-version="true" class="img-fluid" />
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@item.Product.ProductfName</h2>
                                        </td>
                                        <td>$@item.Order.DateOrder</td>
                                        
                                        
                                    }
                                </tr>



                            }
                        </tbody>

                    </table>
                </div>
            </form>
        </div>
    </div>
</div>