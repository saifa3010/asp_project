    var home = (IEnumerable<First_Project.Models.Homef>)ViewBag.HomePage;
	var pro = (IEnumerable<First_Project.Models.Productf>)ViewBag.pro;

}
@{
    ViewData["Title"] = "Store";
    Layout = "_Home";

}

	<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-5">
							<div class="intro-excerpt">
								<h1>Modern Interior <span clsas="d-block">Design Studio</span></h1>
