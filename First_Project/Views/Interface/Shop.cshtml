@{
}

@{
    var shop = (IEnumerable<First_Project.Models.Productf>)ViewBag.shop;

}
@{
    ViewData["Title"] = "Store";
    Layout = "_Home";

}

<!-- Start Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-5">
							<div class="intro-excerpt">
								<h1>Shop</h1>
							</div>
						</div>
						<div class="col-lg-7">
							
						</div>
					</div>
				</div>
			</div>
		<!-- End Hero Section -->

		

		<div class="untree_co-section product-section before-footer-section">
		    <div class="container">
		      	<div class="row">
@foreach(var item in shop){
		      		<!-- Start Column 1 -->
					<div class="col-12 col-md-4 col-lg-3 mb-5">
					<a asp-controller="Interface" asp-action="AddToCart" asp-route-id="@item.Id" class="product-item">				
					<img src=@Url.Content("~/image/" + item.Imagepath)
						 asp-append-version="true" class="img-fluid product-thumbnail" />
					<h3 class="product-title">@item.ProductfName</h3>
					<strong class="product-price">$@item.Price</strong>

					<span class="icon-cross">
						<img src="~/image/cross.svg" class="img-fluid">
					</span>
				
				</a>
					</div> 
					<!-- End Column 1 -->
			}


		</div>
		    </div>
		</div>