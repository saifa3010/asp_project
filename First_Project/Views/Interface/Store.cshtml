			</div>





<!-- Start Product Section -->
<div class="product-section">
	<div class="container">
		<div class="row">

			<!-- Start Column 1 -->
			<div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
				<h2 class="mb-4 section-title">Crafted with excellent material.</h2>
				<p class="mb-4">Donec vitae odio quis nisl dapibus malesuada. Nullam ac aliquet velit. Aliquam vulputate velit imperdiet dolor tempor tristique. </p>
				<p><a href="shop.html" class="btn">Explore</a></p>
			</div>
			<!-- End Column 1 -->
			<!-- Start Column 2 -->
			@foreach(var item in pro){
			<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
				<a asp-controller="Interface" asp-action="AddToCart" asp-route-id="@item.Id" class="product-item">
						

		
					<img src=@Url.Content("~/image/" + item.Imagepath)
						 asp-append-version="true" class="img-fluid product-thumbnail" />
					<h3 class="product-title">@item.ProductfName</h3>
					<strong class="product-price">$@item.Price</strong>

					<span class="icon-cross">
						<img src="~/image/cross.svg" class="img-fluid">
					</span>
				
				</a>
			</div>
			}
			

		</div>
	</div>
</div>


