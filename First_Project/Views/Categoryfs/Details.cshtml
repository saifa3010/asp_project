@model First_Project.Models.Categoryf

@{
    ViewData["Title"] = "Details";
    Layout = "_Dashboard";
}

<h1>Details</h1>

<div>
    <h4>Categoryf</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Category Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src=@Url.Content("~/image/" + Model.Imagepath)
                 asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
